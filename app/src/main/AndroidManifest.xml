        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VisitCodeActivity"
            android:label="@string/title_activity_visit_code"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CreateActivity"
            android:label="@string/title_activity_create" >
        </activity>
        <activity
            android:name=".TouchPwdActivity"
            android:label="@string/title_activity_touch_pwd" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name=".VisitActivity"
            android:label="@string/title_activity_visit" >
        </activity>
        <activity
            android:name=".SwipeCodeActivity"
            android:label="@string/visit_way_one_tip" >
        </activity>
        <activity
            android:name=".QRCodeActivity"
            android:label="@string/title_activity_swipe_code" >
        </activity>
        <activity
            android:name=".PubActivity"
            android:label="@string/pub_activity" >

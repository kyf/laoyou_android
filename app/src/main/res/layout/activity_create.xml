<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.kyf.laoyou.CreateActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:background="@drawable/el"
        android:height="@dimen/input_height"
        android:gravity="center"
        android:layout_marginTop="@dimen/first_el_margin_top"
        android:layout_marginBottom="@dimen/last_el_margin_bottom"
        android:hint="@string/hint_activity_create"
        />

    <Button
        android:id="@+id/create_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_el"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        android:text="@string/next_step" />

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/guide_activity_horizontal_margin"
    android:paddingRight="@dimen/guide_activity_horizontal_margin"
    android:paddingTop="@dimen/guide_activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.kyf.laoyou.PersonActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/person_avatar_block">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/person_avatar"
            android:layout_width="@dimen/person_avatar_width"
            android:layout_height="@dimen/person_avatar_height"
            app:civ_border_width="@dimen/person_avatar_border_width"
            app:civ_border_color="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/devide_line"
            android:background="@color/gray"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/contact_item_margin_top"
            android:layout_marginBottom="@dimen/contact_item_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_photo_height">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/menu_padding_left"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_view"
                android:textSize="@dimen/chat_text_size"
                android:layout_marginLeft="@dimen/menu_padding_left"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/devide_line"
            android:background="@color/gray"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/contact_item_margin_top"
            android:layout_marginBottom="@dimen/contact_item_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_photo_height">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wx"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/menu_padding_left"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wx_view"
                android:textSize="@dimen/chat_text_size"
                android:layout_marginLeft="@dimen/menu_padding_left"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/devide_line"
            android:background="@color/gray"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/contact_item_margin_top"
            android:layout_marginBottom="@dimen/contact_item_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_photo_height">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qq"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/menu_padding_left"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qq_view"
                android:textSize="@dimen/chat_text_size"
                android:layout_marginLeft="@dimen/menu_padding_left"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/devide_line"
            android:background="@color/gray"
            android:visibility="invisible"
            />

    </LinearLayout>
</LinearLayout>

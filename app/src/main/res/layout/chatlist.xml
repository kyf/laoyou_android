<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/chat_item_margin_top"
        android:layout_marginBottom="@dimen/chat_item_margin_top"
        >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/chat_photo_width"
        android:layout_height="@dimen/chat_photo_height"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="@color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/left"
        android:id="@+id/msgText"
        android:textSize="@dimen/chat_text_size"
        android:lineSpacingExtra="@dimen/chat_line_space_extra"
        />

    </LinearLayout>

</LinearLayout>
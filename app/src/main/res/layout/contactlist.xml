<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_index_tag_height"
        android:paddingLeft="@dimen/tiny_activity_horizontal_margin"
        android:id="@+id/contactlist_letter"
        android:text="A"
        android:textSize="@dimen/contact_index_tag_size"
        android:gravity="top"
        android:background="@color/navpage"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/tiny_activity_horizontal_margin"
        android:paddingRight="@dimen/tiny_activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/contact_item_margin_top"
        android:layout_marginBottom="@dimen/contact_item_margin_bottom"
        >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contactlist_photo"
        android:layout_width="@dimen/chat_photo_width"
        android:layout_height="@dimen/chat_photo_height"
        app:civ_border_color="@color/transparent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/contact_item_margin_left"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/contact_item_name_size"
            android:textColor="@color/black"
            android:id="@+id/contactlist_nickname"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/contact_item_phone_size"
            android:id="@+id/contactlist_phone"
            />
    </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone"
                android:scaleType="center"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:id="@+id/call_phone_bt"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingRight="@dimen/menu_offset_x"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/actionbarbg"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/menu_padding_left"
            android:paddingRight="@dimen/menu_padding_right"
            android:id="@+id/menu_visit_bt"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chat_photo_height"
                android:text="@string/title_activity_visit"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_size"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/devide_line"
            android:background="@color/black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/menu_padding_left"
            android:paddingRight="@dimen/menu_padding_right"
            android:id="@+id/menu_pub_activity_bt"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chat_photo_height"
                android:text="@string/pub_activity"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_size"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>